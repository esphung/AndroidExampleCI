{
  "name": "android-example-ci",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "android": "npx @react-native-community/cli run-android",
    "lint": "npx eslint ./src --ext .js,.jsx,.ts,.tsx",
    "start": "npx @react-native-community/cli start --client-logs",
    "test": "npx jest",
    "test:coverage": "npx jest --coverage",
    "format": "npx prettier --write ./src",
    "typecheck": "npx tsc",
    "clean": "rm -rf node_modules && rm -rf android/app/build && yarn cache clean",
    "precommit": "yarn format && yarn lint && yarn typecheck && yarn test",
    "assemble:debug": "(cd android && ./gradlew assembleDebug)",
    "assemble:release": "(cd android && ./gradlew assembleRelease)",
    "e2e:debug": "sh ./.scripts/e2e.sh --debug",
    "e2e:release": "sh ./.scripts/e2e.sh --release"
  },
  "dependencies": {
    "react": "19.1.0",
    "react-native": "0.81.0"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.3",
    "@babel/runtime": "^7.25.0",
    "@react-native-community/cli": "20.0.0",
    "@react-native-community/cli-platform-android": "20.0.0",
    "@react-native-community/cli-platform-ios": "20.0.0",
    "@react-native/babel-preset": "0.81.0",
    "@react-native/eslint-config": "0.81.0",
    "@react-native/metro-config": "0.81.0",
    "@react-native/typescript-config": "0.81.0",
    "@testing-library/react-native": "^13.2.2",
    "@types/jest": "^29.5.13",
    "@types/react": "^19.1.0",
    "@types/react-test-renderer": "^19.1.0",
    "eslint": "^8.19.0",
    "jest": "^29.6.3",
    "prettier": "2.8.8",
    "react-test-renderer": "19.1.0",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "yarn@1.22.22"
}
